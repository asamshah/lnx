

{% assign videourl = section.settings.videourl %}
{% assign verticalpadding = section.settings.verticalpadding %}
{% assign vidtitle = section.settings.vidtitle %}

<div class="video-section" style="padding-top: {{ verticalpadding }}px; padding-bottom: {{ verticalpadding }}px;">
  <div style='text-align: center;'><h2>{{ vidtitle }}</h2><p><iframe src={{ videourl }} 
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="" 
        width="560" height="315" frameborder="0"></iframe></p></div>
  </div>
</div>

<style>
.video-section {
  text-align: center;
}
.video-wrapper {
  position: relative;
  padding-bottom: 56.25%; 
  height: 0;
}
.video-wrapper iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
</style>

{% schema %}
{
  "name": "Video Section",
  "class": "full-width-section",
  "settings": [
     {
      "type": "text",
      "id": "vidtitle",
      "label": "Video Title"
    },
    {
      "type": "text",
      "id": "videourl",
      "label": "Video URL"
    },
    {
      "type": "range",
      "id": "verticalpadding",
      "label": "Vertical Padding",
      "default": 50,
      "min": 0,
      "max":100,
      "step": 5
    }
  ],
  "presets": [
    {
      "name": "Video Section",
      "category": "Media"
    }
  ]
}
{% endschema %}